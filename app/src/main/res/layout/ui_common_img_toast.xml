<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="@dimen/sw_px236"
        android:layout_height="@dimen/sw_px236"
        android:background="@drawable/ui_bg_toast_black_12px"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_toast"
            android:layout_width="@dimen/sw_px118"
            android:layout_height="@dimen/sw_px118" />

        <TextView
            android:id="@+id/txt_toast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sw_px10"
            android:ellipsize="end"
            android:gravity="center"
            android:maxEms="6"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/sw_px32" />
    </LinearLayout>
</RelativeLayout>